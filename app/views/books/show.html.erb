<div class="container px-5 px-sm-0">
  <div class="row">
    <%=render 'list',book: @book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%=link_to user_path(@book.user.id) do %>
                <% if @book.user.image.attached? %>
                  <%= image_tag @book.user.image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              <%end%>
            </td>
            <td>
              <%=link_to book_path(@book.id) do %>
                <%=@book.title %>
              <%end%>
            </td>
            <td>
              <%=@book.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>