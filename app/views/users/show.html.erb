<div class="container px-5 px-sm-0">
  <div class="row">
    <%=render 'books/list',book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.image.attached? %>
                  <%=image_tag @user.image,size: "80x80" %>
                <%else%>
                  <%=image_tag 'no_image',size: "80x80" %>
                <%end%>
              </td>
              <td>
                <%=link_to book_path(book.id) do %>
                  <%=book.title %>
                <%end%>
              </td>
              <td><%=book.body %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>